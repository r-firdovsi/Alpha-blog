<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-5 bg-info rounded", local: true) do |f| %>
        <div class="form-group row my-2">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>

        <div class="form-group justify-content-center text-center">
          <%= f.submit(@category.new_record? ? "Create Category" : "Update Category", class: "btn btn-outline-light btn-lg") %>
        </div>
      <% end %>
    </div>
    <div class="text-center mb-2">
      <%= link_to '[ Cancel and Return to category listing ]', categories_path, class: "text-info" %>
    </div>
  </div>
</div>